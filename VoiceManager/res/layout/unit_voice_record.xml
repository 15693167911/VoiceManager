<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/unit_voice_record_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:visibility="gone"
>
	<LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="fill_parent" 
    	android:orientation="horizontal"
    	android:layout_weight="1"
    	android:background="@drawable/text_bgblue_left"
    	android:gravity="center_vertical"
	>	
		<ImageView
			android:id="@+id/unit_voice_record_operate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/voice_record"
	        android:padding="20dp" 
		/>
	    <TextView
            android:id="@+id/unit_voice_record_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:text="正在录音"
		/>
	     <TextView
            android:id="@+id/unit_voice_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:text="00:00:00"
            android:layout_marginLeft="20dp"
		/>
	</LinearLayout>
	
	<ImageView
		android:layout_width="1dp"
	    android:layout_height="fill_parent"
	    android:src="#ffffffff"
	/>
        
	<TextView
		android:id="@+id/unit_voice_record_finish"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/text_bggreen_right"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:text="完成"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
	/>
</LinearLayout>